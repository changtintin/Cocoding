RewriteEngine on

RewriteRule ^(index|search|post|registration|contact|category|author_post|forgot|admin|user)$ $1.php [NC,L]
RewriteRule ^admin/(\w+)$ admin/$1.php [NC,L]
RewriteRule ^admin_posts/(.+)$ admin_posts.php?source=$1 [NC,L]

RewriteRule ^user/(\w+)$ user/$1.php [NC,L]

RewriteRule ^post/(\d+)/(.+)?$ post.php?p_id=$1&confirm_msg=$2 [NC,L,QSA,NE]

RewriteRule ^author_post/(\w+)$ author_post.php?author=$1 [NC,L]
RewriteRule ^user_posts/user_(\w+)_(\w+)$ user_posts.php?request=$1 [NC,L]
RewriteRule ^category/(\d+)$ category.php?cat=$1 [NC,L]
RewriteRule ^forgot/(\d+)$ forgot.php?forgot=$1 [NC,L]
RewriteRule ^tag/(\w+)$ tag.php?name=$1 [NC,L]

# [NC, L] -> Apache server Flag

